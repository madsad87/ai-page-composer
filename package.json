{
  "name": "modern-wp-plugin",
  "version": "1.0.0",
  "description": "Modern WordPress Plugin Template following industry best practices",
  "main": "assets/js/script.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "lint:css": "stylelint assets/css/**/*.css",
    "lint:js": "eslint assets/js/**/*.js",
    "fix:js": "eslint assets/js/**/*.js --fix",
    "autoprefixer": "postcss assets/css/style.css --use autoprefixer -o assets/css/style.css",
    "makepot": "wp i18n make-pot . languages/modern-wp-plugin.pot --exclude=node_modules,vendor,tests",
    "zip": "node scripts/makezip.js",
    "watch": "concurrently \"npm run dev\" \"npm run lint:css -- --watch\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "modern",
    "template",
    "gutenberg",
    "blocks"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@wordpress/scripts": "^27.0.0",
    "@wordpress/block-editor": "^12.0.0",
    "@wordpress/blocks": "^12.0.0",
    "@wordpress/components": "^25.0.0",
    "@wordpress/element": "^5.0.0",
    "@wordpress/i18n": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-wordpress": "^2.0.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-wordpress": "^17.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "jquery": "^3.7.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/modern-wp-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/modern-wp-plugin/issues"
  },
  "homepage": "https://github.com/yourusername/modern-wp-plugin#readme"
}